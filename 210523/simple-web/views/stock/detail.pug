extends ../_layouts/master

block content 
    h1 #{stocks.stock_name} 股票資料

    table
        tr 
            th 日期
            th 開盤價
            th 最高價
            th 最低價
            th 收盤價
        each price in stockPrices
            tr 
                td #{price.date} 
                td #{price.open_price} 
                td #{price.high_price} 
                td #{price.low_price}
                td #{price.close_price} 
    .pagination
        - for(var p = 1 ; p <= pagination.lastPage ; p++)
            a(href=`/stock/${stocks.stock_id}?page=${p}`, class=p==pagination.currentPage?"active":"") #{p}
    .back
        a(href='/stock') #{"返回列表"}