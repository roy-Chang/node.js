extends ../_layouts/master

block content 
    each stock in stocks
        h1 這是#{stock.stock_name}股票資料

    table
        tr 
            th 日期
            th 開盤價
            th 最高價
            th 最低價
            th 收盤價
        each price in stockPrices
            tr 
                td #{price.date} 
                td #{price.open_price} 
                td #{price.high_price} 
                td #{price.low_price}
                td #{price.close_price} 